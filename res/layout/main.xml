<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/RelativeLayoutMain"
   >

   

    <RelativeLayout android:background="#99000000"  android:layout_width="wrap_content"  android:layout_alignParentBottom="true" 
            android:layout_height="100dip" android:id="@+id/RelativeLayoutBar" >
	    <FrameLayout
	        android:id="@+id/FrameLayoutClock"
	        android:layout_width="140dip"
	        android:layout_height="80dip"
	        android:layout_margin="10dip"
	       >
	    </FrameLayout>

        <LinearLayout
            android:id="@+id/MainBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/FrameLayoutClock" >
          
        </LinearLayout>
	</RelativeLayout>

    <FrameLayout
         android:id="@+id/FrameLayoutTray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayoutBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" >
    </FrameLayout>

</RelativeLayout>